{
  "name": "express-service-with-tests",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "dev": "SET NODE_ENV=local& nodemon ./server.js",
    "test": "SET NODE_ENV=test& jest --detectOpenHandles",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:delete": "docker-compose down -v",
    "db:migrate": "node migrate.js"
  },
  "dependencies": {
    "@nearform/sql": "^1.5.0",
    "ajv": "^7.0.2",
    "bcrypt": "^5.0.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "fluent-json-schema": "^2.0.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "mysql": "^2.18.1",
    "postgrator": "^4.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "faker": "^5.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "supertest": "^6.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
